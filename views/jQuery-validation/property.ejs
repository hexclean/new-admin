<script>
  $(function () {
    $("#roName_error_message").hide();
    $("#huName_error_message").hide();
    $("#enName_error_message").hide();
    $("#propValRo_error_message").hide();
    $("#propValHu_error_message").hide();
    $("#propValEn_error_message").hide();
    $("#counter_error_message").hide();

    var error_roName = false;
    var error_huName = false;
    var error_enName = false;
    var error_propValRo = false;
    var error_propValHu = false;
    var error_propValEn = false;
    var error_counter = false;

    $("#roName").focusout(function () {
      check_roName();
    });

    $("#huName").focusout(function () {
      check_huName();
    });

    $("#enName").focusout(function () {
      check_enName();
    });

    $(".propValRo").focusout(function () {
      propValRo();
    });

    $(".propValHu").focusout(function () {
      propValHu();
    });

    $(".propValEn").focusout(function () {
      propValEn();
    });

    var nameValue = $("#counter").val();

    $("#counter").change(function () {
      console.log(nameValue);
      counter();
      nameValue = $(this).val();
    });

    function counter() {
      if ($("#counter").val() == undefined) {
        $("#counter_error_message").html(
          "<%= lingua.box_ro_name_validation %>"
        );
        $("#counter_error_message").show();
        error_counter = true;
      } else {
        $("#counter_error_message").hide();
      }
    }

    function propValRo() {
      var propValRo = $(".propValRo");
      for (let i = 0; i < propValRo.length; i++) {
        var propValRoItem = $(propValRo[i]);
        // console.log(propValRoItem.val());
        var counter = propValRoItem.closest(".cnt").find("#counter");
        var counterIndex = $(counter[0]).val();
        if (propValRoItem.val().length < 1 || propValRoItem.val().length > 50) {
          $("#propValRo_error_message" + counterIndex).html(
            "<%= lingua.box_ro_name_validation %>"
          );
          $("#propValRo_error_message" + counterIndex).show();
          error_propValRo = true;
        } else {
          $("#propValRo_error_message" + counterIndex).hide();
        }
      }
    }

    function propValHu() {
      var propValHu = $(".propValHu").val().length;

      if (propValHu < 1 || propValHu > 50) {
        $("#propValHu_error_message").html(
          "<%= lingua.box_ro_name_validation %>"
        );
        $("#propValHu_error_message").show();
        error_propValHu = true;
      } else {
        $("#propValHu_error_message").hide();
      }
    }

    function propValEn() {
      var propValEn = $(".propValEn").val().length;

      if (propValEn < 1 || propValEn > 50) {
        $("#propValEn_error_message").html(
          "<%= lingua.box_ro_name_validation %>"
        );
        $("#propValEn_error_message").show();
        error_propValEn = true;
      } else {
        $("#propValEn_error_message").hide();
      }
    }

    function check_roName() {
      var roName_length = $("#roName").val().length;

      if (roName_length < 1 || roName_length > 50) {
        $("#roName_error_message").html("<%= lingua.box_ro_name_validation %>");
        $("#roName_error_message").show();
        error_roName = true;
      } else {
        $("#roName_error_message").hide();
      }
    }

    function check_huName() {
      var huName_length = $("#huName").val().length;

      if (huName_length < 1 || huName_length > 50) {
        $("#huName_error_message").html("<%= lingua.box_hu_name_validation %>");
        $("#huName_error_message").show();
        error_huName = true;
      } else {
        $("#huName_error_message").hide();
      }
    }

    function check_enName() {
      var enName_length = $("#enName").val().length;

      if (enName_length < 1 || enName_length > 50) {
        $("#enName_error_message").html("<%= lingua.box_en_name_validation %>");
        $("#enName_error_message").show();
        error_enName = true;
      } else {
        $("#enName_error_message").hide();
      }
    }

    $("#createProperty_form").submit(function () {
      error_roName = false;
      error_huName = false;
      error_enName = false;
      error_propValRo = false;
      error_propValHu = false;
      error_propValEn = false;
      error_counter = false;
      check_roName();
      check_huName();
      check_enName();
      propValRo();
      propValHu();
      propValEn();
      counter();

      if (
        error_roName == false &&
        error_huName == false &&
        error_enName == false &&
        error_propValRo == false &&
        error_propValHu == false &&
        error_propValEn == false &&
        error_counter == false
      ) {
        $("#createProperty").prop("disabled", true);

        return true;
      } else {
        return false;
      }
    });
  });
</script>
<style>
  .intro {
    border-color: red;
  }
</style>
