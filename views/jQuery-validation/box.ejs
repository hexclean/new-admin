<script>
  $(function () {
    $("#sku_error_message").hide();

    $("#price_error_message").hide();

    var error_sku = false;

    var error_price = false;

    $("#sku").focusout(function () {
      check_sku();
    });

    $("#price").focusout(function () {
      check_price();
    });

    function check_price() {
      var price = $("#price").val().length;

      if (price < 1 || price > 10) {
        $(".price").addClass("is-invalid");
        $("#price_error_message").html("Doboz ára megadása kötelező!");
        $("#price_error_message").show();

        error_price = true;
      } else {
        $(".price").removeClass("is-invalid");
        $("#price_error_message").hide();
      }
    }

    function check_sku() {
      var sku_length = $("#sku").val().length;

      if (sku_length < 1 || sku_length > 50) {
        $(".sku").addClass("is-invalid");
        $("#sku_error_message").html("Doboz neve megadása kötelező!");
        $("#sku_error_message").show();
        error_sku = true;
      } else {
        $(".sku").removeClass("is-invalid");
        $("#sku_error_message").hide();
      }
    }

    $("#createBox_form").submit(function () {
      error_sku = false;

      error_price = false;

      check_sku();
      check_price();

      if (error_sku == false && error_price == false) {
        $("#createBox").prop("disabled", true);

        return true;
      } else {
        return false;
      }
    });
  });
</script>
