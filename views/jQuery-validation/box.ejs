<script>
  $(function () {
    $("#roName_error_message").hide();
    $("#huName_error_message").hide();
    $("#enName_error_message").hide();
    $("#price_error_message").hide();

    var error_roName = false;
    var error_huName = false;
    var error_enName = false;
    var error_price = false;

    $("#roName").focusout(function () {
      check_roName();
    });

    $("#huName").focusout(function () {
      check_huName();
    });

    $("#enName").focusout(function () {
      check_enName();
    });
    $("#price").focusout(function () {
      check_price();
    });

    function check_roName() {
      var roName_length = $("#roName").val().length;

      if (roName_length < 2 || roName_length > 15) {
        $("#roName_error_message").html("<%= lingua.box_name_ro_validation %>");
        $("#roName_error_message").show();
        error_roName = true;
      } else {
        $("#roName_error_message").hide();
      }
    }

    function check_huName() {
      var huName_length = $("#huName").val().length;

      if (huName_length < 2 || huName_length > 15) {
        $("#huName_error_message").html("<%= lingua.box_name_hu_validation %>");
        $("#huName_error_message").show();
        error_huName = true;
      } else {
        $("#huName_error_message").hide();
      }
    }

    function check_enName() {
      var enName_length = $("#enName").val().length;

      if (enName_length < 2 || enName_length > 15) {
        $("#enName_error_message").html("<%= lingua.box_name_en_validation %>");
        $("#enName_error_message").show();
        error_enName = true;
      } else {
        $("#enName_error_message").hide();
      }
    }

    function check_price() {
      var price_length = $("#price").val().length;

      if (price_length < 1 || price_length > 15) {
        $("#price_error_message").html("<%= lingua.box_price_validation %>");
        $("#price_error_message").show();
        error_price = true;
      } else {
        $("#price_error_message").hide();
      }
    }

    function check_price_input() {
      var price_length = $("#price").val();

      if (/^[0-9.]*$/.test(price_length) == false) {
        $("#price_error_message").html("nem lehet , hanem . kell");
        $("#price_error_message").show();
        error_price = true;
      } else {
        $("#price_error_message").hide();
      }
    }

    $("#createBox_form").submit(function () {
      error_roName = false;
      error_huName = false;
      error_enName = false;
      error_price = false;

      check_roName();
      check_huName();
      check_enName();
      check_price();
      check_price_input();

      if (
        error_roName == false &&
        error_huName == false &&
        error_enName == false &&
        error_price == false
      ) {
        return true;
      } else {
        return false;
      }
    });
  });
</script>
<style>
  .intro {
    border-color: red;
  }
</style>

<script>
  $(document).ready(function () {
    $(function () {
      $("#createBox").one("click", function () {
        $("#createBox").prop("disabled", true);
        $("#createBox_form").submit();
      });
    });
  });
</script>
