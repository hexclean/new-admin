        var endDate = $("#endDate").val().length;
        if (startDate != 5 && endDate !=5 ) {
          $("#start_error_message").html("start_error_message");
          $("#start_error_message").show();
          $("#end_error_message").html("end_error_message");
          $("#end_error_message").show();
          error_start = true;
          error_end = true;
        } else {
