        error_roName == false &&
        error_huName == false &&
        error_enName == false &&
        error_roDescription == false &&
        error_huDescription == false &&
        error_enDescription == false &&
        error_variants == false &&
        error_allergens == false &&
        error_box == false &&
        <% if(!editing){ %>
