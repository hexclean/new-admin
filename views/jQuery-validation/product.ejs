        }
      });
    }
    $(".extra_price_input").focusout(function () {
      var len = $(this).val().length;
      var extraId = $(this).closest(".extra_box").data("extra");
      if (len < 1) {
        $("#price_error_message_" + extraId)
          .show()
          .html("Mezo kitoltese kotelezo");
