<script>
  $(document).ready(function () {
    $(".status-checkbox").click(function () {
      var extraId = $(this).attr("data-extraId");
      if ($(this).is(":checked")) {
        $(".status-" + extraId).val("on");
      } else {
        $(".status-" + extraId).val("off");
      }
    });
  });
</script>

<script>
  $(function () {
    $("#roName_error_message").hide();
    $("#huName_error_message").hide();
    $("#enName_password_error_message").hide();
    $("#allergen_error_message").hide();
    $("#price_error_message").hide();

    var error_roName = false;
    var error_huName = false;
    var error_enName = false;
    var error_sku = false;
    var error_allergen = false;
    var error_price = false;

    $("#roName").focusout(function () {
      check_roName();
    });

    $("#huName").focusout(function () {
      check_huName();
    });

    $("#enName").focusout(function () {
      check_enName();
    });

    $(".status-checkbox").change(function () {
      check_allergen();
    });
    $("#price").change(function () {
      check_price();
    });

    function check_price() {
      var check_price = $("#price").val().length;

      if (check_price < 1) {
        $(".price").addClass("is-invalid");
        $("#price_error_message").html("Extra árának megadása kötelező!");
        $("#price_error_message").show();
        error_price = true;
      } else {
        $(".price").removeClass("is-invalid");
        $("#price_error_message").hide();
      }
    }

    function check_roName() {
      var roName_length = $("#roName").val().length;

      if (roName_length < 1 || roName_length > 100) {
        $(".roName").addClass("is-invalid");
        $("#roName_error_message").html(
          "Extra román nevének megadása kötelező!"
        );
        $("#roName_error_message").show();
        error_roName = true;
      } else {
        $(".roName").removeClass("is-invalid");
        $("#roName_error_message").hide();
      }
    }

    function check_huName() {
      var huName_length = $("#huName").val().length;

      if (huName_length < 1 || huName_length > 100) {
        $(".huName").addClass("is-invalid");
        $("#huName_error_message").html(
          "Extra magyar nevének megadása kötelező!"
        );
        $("#huName_error_message").show();
        error_huName = true;
      } else {
        $(".huName").removeClass("is-invalid");
        $("#huName_error_message").hide();
      }
    }

    function check_enName() {
      var enName_length = $("#enName").val().length;

      if (enName_length < 1 || enName_length > 100) {
        $(".enName").addClass("is-invalid");
        $("#enName_error_message").html(
          "Extra angol nevének megadása kötelező!"
        );
        $("#enName_error_message").show();
        error_enName = true;
      } else {
        $(".enName").removeClass("is-invalid");
        $("#enName_error_message").hide();
      }
    }

    $("#createExtra_form").submit(function () {
      error_roName = false;
      error_huName = false;
      error_enName = false;
      error_price = false;

      check_roName();
      check_huName();
      check_enName();
      check_price();

      if (
        error_roName == false &&
        error_huName == false &&
        error_enName == false &&
        error_price == false
      ) {
        $("#createBox").prop("disabled", true);
        return true;
      } else {
        return false;
      }
    });
  });
</script>
<style>
  .intro {
    border-color: red;
  }
</style>

<script>
  $(document).ready(function () {
    $(function () {
      $("#createExtra").one("click", function () {
        $("#createExtra_form").submit();
      });
    });
  });
</script>
