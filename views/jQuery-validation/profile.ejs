<script>
  $(function () {
    $("#name_error_message").hide();
    $("#roAddress_error_message").hide();
    $("#huAddress_error_message").hide();
    $("#enAddress_error_message").hide();
    $("#roShortCompanyDesc_error_message").hide();
    $("#huShortCompanyDesc_error_message").hide();
    $("#enShortCompanyDesc_error_message").hide();
    $("#city_error_message").hide();
    $("#village_error_message").hide();

    var error_name = false;
    var error_roAddress = false;
    var error_huAddress = false;
    var error_enAddress = false;
    var error_roShortCompanyDesc = false;
    var error_huShortCompanyDesc = false;
    var error_enShortCompanyDesc = false;
    var error_city = false;
    var error_village = false;

    $("#fullName").focusout(function () {
      check_fullName();
    });

    $("#roAdress").focusout(function () {
      check_roAdress();
    });

    $("#huAdress").focusout(function () {
      check_huAdress();
    });

    $("#enAdress").focusout(function () {
      check_enAdress();
    });

    $("#roShortCompanyDesc").focusout(function () {
      check_roShortCompanyDesc();
    });

    $("#huShortCompanyDesc").focusout(function () {
      check_huShortCompanyDesc();
    });
    $("#enShortCompanyDesc").focusout(function () {
      check_enShortCompanyDesc();
    });
    $("#city").focusout(function () {
      check_city();
    });
    $("#village").focusout(function () {
      check_village();
    });

    function check_fullName() {
      var fullName = $("#fullName").val().length;
      if (fullName < 1 || fullName > 50) {
        $("#name_error_message").html("<%= lingua.extra_en_name_validation %>");
        $("#name_error_message").show();
        error_name = true;
      } else {
        $("#name_error_message").hide();
      }
    }

    function check_roAdress() {
      var roAdress = $("#roAdress").val().length;

      if (roAdress < 1 || roAdress > 50) {
        $("#roAddress_error_message").html(
          "<%= lingua.extra_en_name_validation %>"
        );
        $("#roAddress_error_message").show();
        error_roAddress = true;
      } else {
        $("#roAddress_error_message").hide();
      }
    }

    function check_huAdress() {
      var huAdress = $("#huAdress").val().length;

      if (huAdress < 1 || huAdress > 50) {
        $("#huAddress_error_message").html(
          "<%= lingua.extra_en_name_validation %>"
        );
        $("#huAddress_error_message").show();
        error_huAddress = true;
      } else {
        $("#huAddress_error_message").hide();
      }
    }

    function check_enAdress() {
      var enAdress = $("#enAdress").val().length;

      if (enAdress < 1 || enAdress > 50) {
        $("#enAddress_error_message").html(
          "<%= lingua.extra_en_name_validation %>"
        );
        $("#enAddress_error_message").show();
        error_enAddress = true;
      } else {
        $("#enAddress_error_message").hide();
      }
    }

    function check_roShortCompanyDesc() {
      var roShortCompanyDesc = $("#roShortCompanyDesc").val().length;

      if (roShortCompanyDesc < 1 || roShortCompanyDesc > 50) {
        $("#roShortCompanyDesc_error_message").html(
          "<%= lingua.extra_en_name_validation %>"
        );
        $("#roShortCompanyDesc_error_message").show();
        error_roShortCompanyDesc = true;
      } else {
        $("#roShortCompanyDesc_error_message").hide();
      }
    }

    function check_huShortCompanyDesc() {
      var huShortCompanyDesc = $("#huShortCompanyDesc").val().length;

      if (huShortCompanyDesc < 1 || huShortCompanyDesc > 50) {
        $("#huShortCompanyDesc_error_message").html(
          "<%= lingua.box_hu_name_validation %>"
        );
        $("#huShortCompanyDesc_error_message").show();
        error_huShortCompanyDesc = true;
      } else {
        $("#huShortCompanyDesc_error_message").hide();
      }
    }

    function check_enShortCompanyDesc() {
      var enShortCompanyDesc = $("#enShortCompanyDesc").val().length;

      if (enShortCompanyDesc < 1 || enShortCompanyDesc > 50) {
        $("#enShortCompanyDesc_error_message").html(
          "<%= lingua.box_en_name_validation %>"
        );
        $("#enShortCompanyDesc_error_message").show();
        error_enShortCompanyDesc = true;
      } else {
        $("#enShortCompanyDesc_error_message").hide();
      }
    }

    function check_city() {
      var city = $("#city").val().length;
      if (city < 1 || city > 50) {
        $("#city_error_message").html("<%= lingua.extra_en_name_validation %>");
        $("#city_error_message").show();
        error_city = true;
      } else {
        $("#city_error_message").hide();
      }
    }
    function check_village() {
      var village = $("#village").val().length;
      if (village < 1 || village > 50) {
        $("#village_error_message").html(
          "<%= lingua.extra_en_name_validation %>"
        );
        $("#village_error_message").show();
        error_village = true;
      } else {
        $("#village_error_message").hide();
      }
    }

    $("#update_profile").submit(function () {
      error_name = false;
      error_roAddress = false;
      error_huAddress = false;
      error_enAddress = false;
      error_roShortCompanyDesc = false;
      error_huShortCompanyDesc = false;
      error_enShortCompanyDesc = false;
      error_city = false;
      error_village = false;
      check_fullName();
      check_roAdress();
      check_huAdress();
      check_enAdress();
      check_roShortCompanyDesc();
      check_huShortCompanyDesc();
      check_enShortCompanyDesc();
      check_city();
      check_village();
      if (
        error_name == false &&
        error_roAddress == false &&
        error_huAddress == false &&
        error_enAddress == false &&
        error_roShortCompanyDesc == false &&
        error_huShortCompanyDesc == false &&
        error_enShortCompanyDesc == false &&
        error_village == false &&
        error_city == false
      ) {
        $("#profileButton").prop("disabled", true);

        return true;
      } else {
        return false;
      }
    });
  });
</script>
<style>
  .intro {
    border-color: red;
  }
</style>
<script>
  $(document).ready(function () {
    const regex = /[^\d.]|\.(?=.*\.)/g;
    const subst = ``;
    $("#village").keyup(function () {
      const str = this.value;
      const result = str.replace(regex, subst);
      this.value = result;
    });
  });
</script>

