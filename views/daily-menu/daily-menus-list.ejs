<%- include('../includes/head.ejs') %>
</head>
<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
  <%- include('../includes/preloader.ejs') %> <%-
  include('../includes/navigation.ejs') %> <%-
  include('../includes/sidebar-right.ejs') %>
  
  <main class="body-content">   
    <div class="ms-content-wrapper">
        <div class="row">
          <div class="col-md-12">
            <nav aria-label="breadcrumb" class="new">
              <ol class="breadcrumb pl-0">
                <li class="breadcrumb-item"><a href="#"><i class="material-icons">home</i> Home</a></li>
                <li class="breadcrumb-item"><a href="#">Menu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Menu Grid</li>
              </ol>
            </nav>
            
            <% if (prods.length > 0) { %>
              <div class="row">
                <% for (let product of prods) { %>
                  <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">        
                    <div class="ms-card">
                      <div class="ms-card-img">
                        <img src="/<%= product.imageUrl %>" alt="<%= product.title.ro %>">
                      </div>
                      <div class="ms-card-body">
                        <div class="new">
                         
                          <h6 class="mb-0"><%= product.title[`${currentLanguage}`] %></h6>
                          <h6 class="ms-text-primary mb-0"><%= product.price %> lej</h6>
                        </div>   
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, dolor sit amet, consectetur adipiscing</p>
                        <div class="new mb-0">
                          <form action="/admin/delete-product" method="POST">
                            <input type="hidden" value="<%= product._id %>" name="productId">
                            <button class="btn grid-btn mt-0 btn-sm btn-primary" type="submit"><%= lingua.product_action_delete %></button>
                         </form>
                          <a href="/admin/edit-daily-menu/<%= product._id %>?edit=true"class="btn grid-btn mt-0 btn-sm btn-secondary" ><%= lingua.product_action_edit %></a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>
                </div>    
            </div>
          </div>
          <% } else { %>
            <h1>No Products Found!</h1>
            <% } %>
        </div>
  </main>
<%- include('../includes/end.ejs')
  %>
</body>