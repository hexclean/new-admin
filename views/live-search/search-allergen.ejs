<thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col"><%= lingua.allergen_list_name %></th>
    <th scope="col"><%= lingua.allergen_list_status %></th>
    <th scope="col"><%= lingua.allergen_list_operation %></th>
  </tr>
</thead>
<% if (allergen.length > 0) { %> <% for (let i = 0; i < allergen.length; i++) {
%>
<tbody>
  <th scope="row"><%= allergen[i].id %></th>
  <td><%= allergen[i].AllergenTranslations[0].name %></td>

  <td><span class="badge badge-success"><%= lingua.status_active %></span></td>

  <td>
    <a
      href="/admin/edit-allergen/<%= allergen[i].id %>?edit=true"
      class="btn grid-btn mt-0 btn-sm btn-secondary"
      ><%= lingua.button_edit %></a
    >
  </td>
</tbody>
<% } %> <% } else { %>
<h1>No Products Found!</h1>
<% } %>
