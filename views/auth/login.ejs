<%- include('../includes/head.ejs') %>
</head>
<body>
    <main>
      <% if (errorMessage) { %>
        <div class="toast toast-error" aria-live="assertive">
          <%= errorMessage %>
          <div class="toast-progress" style="width: 99.7331%;"></div>
          <div class="toast-title">lorem ipsum asit</div>
          <div class="toast-message">This is a Danger Toast</div>
        </div>

    <% } %>
          <div class="ms-content-wrapper ms-auth">
            <div class="ms-auth-container">
              <div class="ms-auth-col">
                <div class="ms-auth-bg"></div>
              </div>
              <div class="ms-auth-col">
                <div class="ms-auth-form">
                  <form class="needs-validation" action="/login" method="POST">
                    <h3>Login to Account</h3>
                    <div class="mb-3">
                        <form class="login-form" action="/login" method="POST">
                      <label for="email">Email Address</label>
                      <div class="input-group">
                        <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %> form-control" type="email" name="email" id="email" placeholder="Email Address">
                      </div>
                    </div>
                    <div class="mb-2">
                      <label for="password">Password</label>
                      <div class="input-group">
                        <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %> form-control" type="password" name="password" id="password">
                        <div class="invalid-feedback">Please provide a password.</div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="d-block mt-3"><a href="#" class="btn-link" data-toggle="modal" data-target="#modal-12">Forgot Password?</a>
                      </label>
                    </div>
                    <button class="btn btn-primary mt-4 d-block w-100" type="submit">Sign In</button> 
                  </form>
                </div>
              </div>
            </div>
          </div>
    </main>
<%- include('../includes/end.ejs') %>