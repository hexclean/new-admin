
<%- include('../includes/head.ejs') %>
</head>
<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
  <%- include('../includes/navigation.ejs') %>

  <main class="body-content">
    
    <%- include('../includes/navigation-bar.ejs') %>
    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
 
    
    <div
      class="ms-content-wrapper"
      action="/admin/<% if (editing) { %>edit-coupon<% } else { %>add-coupon<% } %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="row">
        <div class="col-xl-6 col-md-12">
          <div class="ms-panel ms-panel-fh">
            <div class="ms-panel-header">
              <h6>Add Product Form</h6>
            </div>
            <div class="ms-panel-body">
                <div class="form-row">
                  <form
                    class="product-form"
                    action="/admin/<% if (editing) { %>edit-coupon<% } else { %>add-coupon<% } %>"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                  <div class="col-md-12 mb-3">
                    <label for="name"> Kupon neve</label>
                    <div class="input-group">
                      <input
                        class="form-control <%= validationErrors.find(e => e.param === 'name') ? 'invalid' : '' %>"
                        type="text"
                        name="name"
                        id="name"
                        value="<% if (editing || hasError) { %><%= coupon.name %><% } %>"
                      />
                    </div>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label for="discount"><%= lingua.create_product_discount %></label>
                    <div class="input-group">
                      <input
                        class="form-control <%= validationErrors.find(e => e.param === 'discount') ? 'invalid' : '' %>"
                        type="number"
                        name="discount"
                        id="discount"
                        step="0.01"
                        value="<% if (editing || hasError) { %><%= coupon.discount %><% } %>"
                      />
                      <div class="invalid-feedback">
                        Price 
                      </div>
                    </div>
                  </div>

                 
                  
                </div>
            
            </div>
          </div>
        </div>
      
        <div class="col-xl-6 col-md-12">
          <div class="row">
            <div class="col-md-12">
           
                  <% if (editing) { %>
                  <input
                    type="hidden"
                    value="<%= admin._id %>"
                    name="adminId"
                  />
                  <% } %>

                  <button class="btn" type="submit">
                    <% if (editing) { %>Update Product<% } else { %>Add
                    Product<% } %>
                  </button>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<%- include('../includes/end.ejs') %>
</body>