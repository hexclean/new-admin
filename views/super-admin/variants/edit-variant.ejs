<%- include('../includes/head.ejs') %>
<%- include('../includes/input-validation/edit-variant.ejs') %>

</head>

<body>
    <div class="dashboard-main-wrapper">
      <%- include('../includes/navigation.ejs') %>
      <%- include('../includes/menu.ejs') %>
      <form 
         id="edit-variant"
         class="ms-content-wrapper" 
         action="/super-admin/<% if (editing) { %>edit-variant<% } %>"
         method="POST"
         enctype="multipart/form-data">

         <% if (editing) { %>
            <input
               type="hidden"
               value="<%= variantId %>"
               name="variantId" />
        <% } %>
              
               <div class="dashboard-wrapper">
                <div class="container-fluid dashboard-content">
                    <div class="row">
                        <div class="col-xl-10">
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="section-block" id="basicform">
                                        <h3 class="section-title">Variáns szerkesztése</h3>
                                    </div>
                                    <div class="card">                      
                                        <div class="card-body">

                                                 <div class="form-group">
                                                   <label class="col-form-label">Variáns <strong>id</strong></label>
                                                   <input name="id" type="text" class="form-control" disabled value="<% if (editing) { %><%= variant[0].id %><% } %>">
                                                 </div>

                                                 <div class="form-group">
                                                    <label class="col-form-label">Partner <strong>id</strong></label>
                                                    <input name="restaurantId" type="text" class="form-control" disabled value="<% if (editing) { %><%= variant[0].restaurantId %><% } %>">
                                                  </div>

                                                <div class="form-group">
                                                    <label class="col-form-label">Varáns <strong>román</strong> neve</label>
                                                   <input name="variantNameRoView" id="variantNameRoView" type="text" class="form-control" value="<% if (editing) { %><%= variantNameRoView %><% } %>">
                                                   <span class="check-input error_form intro" id="variantNameRoView_error_message"></span>
                                                </div>

                                                <div class="form-group">
                                                   <label class="col-form-label">Varáns <strong>magyar</strong> neve</label>
                                                   <input name="variantNameHuView" id="variantNameHuView" type="text" class="form-control" value="<% if (editing) { %><%= variantNameHuView %><% } %>">
                                                   <span class="check-input error_form intro" id="variantNameHuView_error_message"></span>
                                                </div>

                                                <div class="form-group">
                                                   <label class="col-form-label">Varáns <strong>angol</strong> neve</label>
                                                   <input name="variantNameEnView" id="variantNameEnView" type="text" class="form-control" value="<% if (editing) { %><%= variantNameEnView %><% } %>">
                                                   <span class="check-input error_form intro" id="variantNameEnView_error_message"></span>
                                                </div> 
                                        </div>
                                    </div>
                                    <button type="submit" id="variant-btn" class="btn btn-success has-icon" ><% if (editing) { %>Variáns frissítése<% } %></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </form>
    </body>
</html>

<%- include('../includes/end.ejs') %>


