<%# Extra validation %>
<script>
  $(function () {
    $("#productDescriptionRoView_error_message").hide();
    $("#productDescriptionHuView_error_message").hide();
    $("#productDescriptionEnView_error_message").hide();

    $("#productTitleEnView_error_message").hide();
    $("#productTitleHuView_error_message").hide();
    $("#productTitleRoView_error_message").hide();

    var productDescriptionRoView = false;
    var productDescriptionHuView = false;
    var productDescriptionEnView = false;

    var productTitleRoView = false;
    var productTitleHuView = false;
    var productTitleEnView = false;

    $("#productDescriptionRoView").focusout(function () {
      check_productDescriptionRoView();
    });

    $("#productDescriptionHuView").focusout(function () {
      check_productDescriptionHuView();
    });

    $("#productDescriptionEnView").focusout(function () {
      check_productDescriptionEnView();
    });
    //

    $("#productTitleRoView").focusout(function () {
      check_productTitleRoView();
    });

    $("#productTitleHuView").focusout(function () {
      check_productTitleHuView();
    });

    $("#productTitleEnView").focusout(function () {
      check_productTitleEnView();
    });

    function check_productDescriptionRoView() {
      var productDescriptionRoView_length = $("#productDescriptionRoView").val()
        .length;

      if (
        productDescriptionRoView_length < 5 ||
        productDescriptionRoView_length > 75
      ) {
        $("#productDescriptionRoView_error_message").html(
          "Termék leírása 5 és 75 karakter között kell lennie"
        );
        $("#productDescriptionRoView_error_message").show();
        productDescriptionEnView = true;
      } else {
        $("#productDescriptionRoView_error_message").hide();
      }
    }

    function check_productDescriptionHuView() {
      var productDescriptionHuView_length = $("#productDescriptionHuView").val()
        .length;

      if (
        productDescriptionHuView_length < 5 ||
        productDescriptionHuView_length > 75
      ) {
        $("#productDescriptionHuView_error_message").html(
          "Termék leírása 5 és 75 karakter között kell lennie"
        );
        $("#productDescriptionHuView_error_message").show();
        productDescriptionHuView = true;
      } else {
        $("#productDescriptionHuView_error_message").hide();
      }
    }

    function check_productDescriptionEnView() {
      var productDescriptionEnView_length = $("#productDescriptionEnView").val()
        .length;

      if (
        productDescriptionEnView_length < 5 ||
        productDescriptionEnView_length > 75
      ) {
        $("#productDescriptionEnView_error_message").html(
          "Termék leírása 5 és 75 karakter között kell lennie"
        );
        $("#productDescriptionEnView_error_message").show();
        productDescriptionEnView = true;
      } else {
        $("#productDescriptionEnView_error_message").hide();
      }
    }

    function check_productTitleRoView() {
      var productTitleRoView_length = $("#productTitleRoView").val().length;

      if (productTitleRoView_length < 2 || productTitleRoView_length > 25) {
        $("#productTitleRoView_error_message").html(
          "Termék neve 2 és 25 karakter között kell lennie"
        );
        $("#productTitleRoView_error_message").show();
        productTitleRoView = true;
      } else {
        $("#productTitleRoView_error_message").hide();
      }
    }

    function check_productTitleHuView() {
      var productTitleHuView_length = $("#productTitleHuView").val().length;

      if (productTitleHuView_length < 2 || productTitleHuView_length > 25) {
        $("#productTitleHuView_error_message").html(
          "Termék neve 2 és 25 karakter között kell lennie"
        );
        $("#productTitleHuView_error_message").show();
        productTitleHuView = true;
      } else {
        $("#productTitleHuView_error_message").hide();
      }
    }

    function check_productTitleEnView() {
      var productTitleEnView_length = $("#productTitleEnView").val().length;

      if (productTitleEnView_length < 2 || productTitleEnView_length > 25) {
        $("#productTitleEnView_error_message").html(
          "Termék neve 2 és 25 karakter között kell lennie"
        );
        $("#productTitleEnView_error_message").show();
        productTitleEnView = true;
      } else {
        $("#productTitleEnView_error_message").hide();
      }
    }

    $("#edit-product").submit(function () {
      productDescriptionRoView = false;
      productDescriptionHuView = false;
      productDescriptionEnView = false;
      productTitleRoView = false;
      productTitleHuView = false;
      productTitleEnView = false;

      check_productDescriptionRoView();

      check_productDescriptionHuView();
      check_productDescriptionEnView();
      check_productTitleRoView();
      check_productTitleHuView();
      check_productTitleEnView();

      if (
        productDescriptionRoView == false &&
        productDescriptionHuView == false &&
        productDescriptionEnView == false &&
        productTitleRoView == false &&
        productTitleHuView == false &&
        productTitleEnView == false
      ) {
        return true;
      } else {
        return false;
      }
    });
  });
</script>

<script>
  $(document).ready(function () {
    $("#edit-product").submit(function () {
      $(".product-btn").attr("disabled", true);
      return true;
    });
  });
</script>

<%# End Extra validation %>
