<%# Extra validation %>
<script>
  $(function () {
    $("#roName_error_message").hide();
    $("#huName_error_message").hide();
    $("#enName_error_message").hide();

    var roName = false;
    var huName = false;
    var enName = false;

    $("#roName").focusout(function () {
      check_roName();
    });

    $("#huName").focusout(function () {
      check_huName();
    });

    $("#enName").focusout(function () {
      check_enName();
    });

    function check_roName() {
      var roName_length = $("#roName").val().length;

      if (roName_length < 2 || roName_length > 66) {
        $("#roName_error_message").html(
          "Város román neve 2 és 66 karakter között kell lennie"
        );
        $("#roName_error_message").show();
        roName = true;
      } else {
        $("#roName_error_message").hide();
      }
    }

    function check_huName() {
      var huName_length = $("#huName").val().length;

      if (huName_length < 2 || huName_length > 66) {
        $("#huName_error_message").html(
          "Város magyar neve 2 és 66 karakter között kell lennie"
        );
        $("#huName_error_message").show();
        huName = true;
      } else {
        $("#huName_error_message").hide();
      }
    }

    function check_enName() {
      var enName_length = $("#enName").val().length;

      if (enName_length < 2 || enName_length > 66) {
        $("#enName_error_message").html(
          "Város angol neve 2 és 66 karakter között kell lennie"
        );
        $("#enName_error_message").show();
        enName = true;
      } else {
        $("#enName_error_message").hide();
      }
    }

    $("#edit-location").submit(function () {
      roName = false;
      huName = false;
      enName = false;

      check_roName();
      check_huName();
      check_enName();

      if (roName == false && huName == false && enName == false) {
        return true;
      } else {
        return false;
      }
    });
  });
</script>

<script>
  $(document).ready(function () {
    $("#edit-location").submit(function () {
      $(".location-btn").attr("disabled", true);
      return true;
    });
  });
</script>

<%# End Extra validation %>
