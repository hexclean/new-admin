<%# Extra validation %>
<script>
  $(function () {
    $("#extraNameRoView_error_message").hide();
    $("#extraNameHuView_error_message").hide();
    $("#extraNameEnView_error_message").hide();

    var extraNameRoView = false;
    var extraNameHuView = false;
    var extraNameEnView = false;

    $("#extraNameRoView").focusout(function () {
      check_extraNameRoView();
    });

    $("#extraNameHuView").focusout(function () {
      check_extraNameHuView();
    });

    $("#extraNameEnView").focusout(function () {
      check_extraNameEnView();
    });

    function check_extraNameRoView() {
      var extraNameRoView_length = $("#extraNameRoView").val().length;

      if (extraNameRoView_length < 2 || extraNameRoView_length > 20) {
        $("#extraNameRoView_error_message").html(
          "Extra neve 2 és 25 karakter között kell lennie"
        );
        $("#extraNameRoView_error_message").show();
        extraNameRoView = true;
      } else {
        $("#extraNameRoView_error_message").hide();
      }
    }

    function check_extraNameHuView() {
      var extraNameHuView_length = $("#extraNameHuView").val().length;

      if (extraNameHuView_length < 2 || extraNameHuView_length > 20) {
        $("#extraNameHuView_error_message").html(
          "Extra neve 2 és 25 karakter között kell lennie"
        );
        $("#extraNameHuView_error_message").show();
        extraNameHuView = true;
      } else {
        $("#extraNameHuView_error_message").hide();
      }
    }

    function check_extraNameEnView() {
      var extraNameEnView_length = $("#extraNameEnView").val().length;

      if (extraNameEnView_length < 2 || extraNameEnView_length > 20) {
        $("#extraNameEnView_error_message").html(
          "Extra neve 2 és 25 karakter között kell lennie"
        );
        $("#extraNameEnView_error_message").show();
        extraNameEnView = true;
      } else {
        $("#extraNameEnView_error_message").hide();
      }
    }

    $("#edit-extra").submit(function () {
      extraNameRoView = false;
      extraNameHuView = false;
      extraNameEnView = false;

      check_extraNameRoView();
      check_extraNameHuView();
      check_extraNameEnView();

      if (
        extraNameRoView == false &&
        extraNameHuView == false &&
        extraNameEnView == false
      ) {
        return true;
      } else {
        return false;
      }
    });
  });
</script>

<script>
  $(document).ready(function () {
    $("#edit-extra").submit(function () {
      $(".extra-btn").attr("disabled", true);
      return true;
    });
  });
</script>

<%# End Extra validation %>
