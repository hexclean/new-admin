<%- include('../includes/head.ejs') %>
</head>
<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
 <%- include('../includes/navigation.ejs') %> 
 


  <main class="body-content">  
    <%- include('../includes/navigation-bar.ejs') %>
    <div class="ms-content-wrapper">
      <div class="ms-profile-overview">
        <div style="background-image: url('/<%= admin.coverImage %>');" class="ms-profile-cover">
          <img class="ms-profile-img" src="/<%= admin.profileImage %>" >
          <div class="ms-profile-user-info">
            <h4 class="ms-profile-username text-white"><%= admin.fullName %></h4>
           
          </div>
          <div class="ms-profile-user-buttons">
           
          </div>
        </div>
        <ul class="ms-profile-navigation nav nav-tabs tabs-bordered" role="tablist">
          <li role="presentation"><a href="#tab1" aria-controls="tab1" class="active show" role="tab" data-toggle="tab"> <%= lingua.primary_data %> </a></li>
          <li role="presentation"><a href="/admin/edit-profile/<%= admin.id %>?edit=true"><%= lingua.primary_data_edit %></a></li>
          <li role="presentation"><a href="/admin/edit-opening-hours/<%= admin.id %>?edit=true"><%= lingua.opening_hours %></a></li>
          <li role="presentation"><a href="/admin/edit-profile-image/<%= admin.id %>?edit=true"><%= lingua.profile_image %></a></li>
          <li role="presentation"><a href="/admin/edit-cover-image/<%= admin.id %>?edit=true"><%= lingua.cover_image %></a></li>

        </ul>
  
      
      </div>
      
      <select name="forma" onchange="location = this.value;">
        <option value="?language=ro"><%= lingua.ro %></option>
        <option value="?language=hu"><%= lingua.hu %></option>
        <option value="?language=en"><%= lingua.en %></option>
       </select>
       


 
      </div>
      <div class="row">
      
        <div class="col-xl-5 col-md-12">
          <div class="ms-panel ms-panel-fh">
            <div class="ms-panel-body">
              <table class="table ms-profile-information">
                <tbody>
                  <tr>
                    <th scope="row"><%= lingua.restaurant_name %></th>
                    <td><%= admin.fullName %></td>
                  </tr>
                  <tr>
                    <th scope="row"><%= lingua.restaurant_email %></th>
                    <td><%= admin.email %></td>
                  </tr>
                  <tr>
                    <th scope="row"><%= lingua.restaurant_phone %></th>
                    <td><%= admin.phoneNumber %></td>
                  </tr>
                 
                
                  <tr>
                    <th scope="row"><%= lingua.restaurant_joined %></th>
                    <td><%= admin.createdAt.toLocaleString("en-GB", {
                      timeZone: "Europe/Helsinki",
                    }); %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          
        </div>
        
      </div>
      
    </div>
    <form action="/logout" method="POST">
      <button class="btn btn-primary" type="submit" id="updateOpeningHrBtn">
                    <%= lingua.logout %>
                     </button>
    </form>
  </main>
<%- include('../includes/end.ejs')
  %>
</body>