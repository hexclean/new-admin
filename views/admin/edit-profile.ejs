<%- include('../includes/head.ejs') %>
</head>
<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
  <%- include('../includes/preloader.ejs') %> <%-
  include('../includes/navigation.ejs') %> <%-
  include('../includes/sidebar-right.ejs') %>

  <main class="body-content">

<li><a href="?language=ro"><%= lingua.navigation.ro %></a></li>
<li><a href="?language=hu"><%= lingua.navigation.hu %></a></li>
<li><a href="?language=en"><%= lingua.navigation.en %></a></li>
    <%- include('../includes/navigation-bar.ejs') %> <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <div
      class="ms-content-wrapper"
      action="/admin/<% if (editing) { %>edit-profile<% } else { %>add-profile<% } %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="row">
        <div class="col-xl-6 col-md-12">
          <div class="ms-panel ms-panel-fh">
            <div class="ms-panel-header">
              <h6>Add Product Form</h6>
            </div>
            <div class="ms-panel-body">
                <div class="form-row">
                  <form
                    class="product-form"
                    action="/admin/<% if (editing) { %>edit-profile<% } else { %>add-profile<% } %>"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                  <div class="col-md-12 mb-3">
                    <label for="email"> Term√©k neve</label>
                    <div class="input-group">
                      <input
                        class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                        type="text"
                        name="email"
                        id="email"
                        value="<% if (editing || hasError) { %><%= admin.email %><% } %>"
                      />
                    </div>
                  </div>

                

                 
                  
                </div>
            
            </div>
          </div>
        </div>
        <div class="col-xl-6 col-md-12">
          <div class="row">
            <div class="col-md-12">
           
                  <% if (editing) { %>
                  <input
                    type="hidden"
                    value="<%= admin._id %>"
                    name="adminId"
                  />
                  <% } %>

                  <button class="btn" type="submit">
                    <% if (editing) { %>Update Product<% } else { %>Add
                    Product<% } %>
                  </button>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<%- include('../includes/end.ejs') %>
</body>