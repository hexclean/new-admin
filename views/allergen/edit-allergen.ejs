

<%- include('../includes/head.ejs') %>
<%- include('../jQuery-validation/allergen.ejs') %>
</head>
<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
   <%- include('../includes/navigation.ejs') %>
   <main class="body-content">
      <%- include('../includes/navigation-bar.ejs') %>
      <form 
         id="createAllergen_form"
         class="ms-content-wrapper" 
         action="/admin/<% if (editing) { %>edit-allergen<% } else { %>add-allergen<% } %>"
         method="POST"
         enctype="multipart/form-data">
         <div class="row">
            <div class="col-xl-6 col-md-12">
               <div class="ms-panel ms-panel-fh">
                  <div class="ms-panel-header">
                     <h6><% if (editing) { %>"<%= allergen[0].AllergenTranslations[0].name %>" <%= lingua.allergen_edit_title %><% } else { %> <%= lingua.create_allergen %> <% } %></h6>
                  </div>
                  <div class="ms-panel-body">
                     <div class="form-row">
                        <div class="col-md-12 mb-3">
                           <label for="roName"><%= lingua.allergen_ro_name %></label>
                           <div class="input-group">
                              <input
                                 class="form-control"
                                 type="text"
                                 name="roName"
                                 autocomplete="off"
                                 id="roName"
                                 value="<% if (editing) { %><%= allergen[0].AllergenTranslations[0].name %><% } %>">
                           </div>
                           <span class="error_form" id="roName_error_message"></span>
                        </div>
                        <div class="col-md-12 mb-3">
                           <label for="huName"><%= lingua.allergen_hu_name %></label>
                           <div class="input-group">
                              <input
                                 class="form-control"
                                 type="text"
                                 name="huName"
                                 autocomplete="off"
                                 id="huName"
                                 value="<% if (editing) { %><%= allergen[0].AllergenTranslations[1].name %><% } %>">
                           </div>
                           <span class="error_form" id="huName_error_message"></span>
                        </div>
                        <div class="col-md-12 mb-3">
                           <label for="enName"><%= lingua.allergen_en_name %></label>
                           <div class="input-group">
                              <input
                                 class="form-control"
                                 type="text"
                                 autocomplete="off"
                                 name="enName"
                                 id="enName"
                                 value="<% if (editing) { %><%= allergen[0].AllergenTranslations[2].name %><% } %>">
                           </div>
                           <span class="error_form" id="enName_error_message"></span>
                        </div>
                        <div class="col-md-12 mb-3">
                           <button type="submit" id="createBox" class="btn btn-success has-icon" ><% if (editing) { %><%=lingua.button_editing %><% } else { %><%= lingua.create_allergen %><% } %></button>
                           <span class="error_form" id="enName_error_message"></span>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <% if (editing) { %>
            <input type="hidden" value="<%= allergenId %>" name="allergenId">
            <%for (let i = 0; i < extTranslations.length; i++){%>
            <input type="hidden" value="<%= extTranslations[i].id %>" name="extTranId">
            <%}%>
            <% } %>
         </div>
         </div>
      </form>
   </main>
   <%- include('../includes/end.ejs') %>
</body>

