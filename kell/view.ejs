<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/index/edit-product.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    
</head>

<body>
   <%- include('../includes/navigation.ejs') %>


    <main>
        <div class="container centered-forms">
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="x">
              
                <input class="form-control form-control-lg" type="text"  placeholder="TITLE" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
            </div>
            <div class="x">
                <input class="form-control form-control-lg" type="text"  placeholder="IMAGE URL" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="x">
                
                <input class="form-control form-control-lg" type="number"  placeholder="PRICE" name="price" id="price" value="<% if (editing) { %><%= product.price %><% } %>">

            </div>
            <div class="x">
              
                <input class="form-control form-control-lg"  rows="3242342342342344" cols="2342324450" type="description"  placeholder="DESCRIPTION" name="description" id="description" value="<% if (editing) { %><%= product.description %><% } %>">

            </div>

            <div class="x">
              
                <input class="form-control form-control-lg"  rows="5" type="description"  placeholder="PREVIEW" name="preview" id="preview" value="<% if (editing) { %><%= product.preview %><% } %>">

            </div>
            

       
            <div class="x">
                    <input class="form-control form-control-lg" type="number"  placeholder="ENABLED" name="enabled" id="enabled" value="<% if (editing) { %><%= product.enabled %><% } %>">

            </div>
            <div class="form-group row">
                <label for="example-datetime-local-input" class="col-2 col-form-label">Date and time</label>
                <div class="col-10">
                  <input class="form-control" type="datetime-local" value="<% if (editing) { %><%= product.createDate %><% } %>" id="createTime">
                </div>
              </div>
            <div class="input-group mb-3 x">
                    <select class="custom-select" id="category" name="category">
                      <option>CATEGORY...</option>
                      <% if (editing && product.category=='ponty')  { %> 
                        <option selected value="ponty">Ponty</option> 
        
                        <% } else{ %>
                        <option value="ponty">Ponty</option>
                      <% } %>

                      <% if (editing && product.category=='amur')  { %> 
                        <option selected value="amur">Amur</option> 
        
                        <% } else{ %>
                        <option value="amur">Amur</option>
                      <% } %>

                      <% if (editing && product.category=='kotesek')  { %> 
                        <option selected value="kotesek">Kotesek</option> 
        
                        <% } else{ %>
                        <option value="kotesek">Kotesek</option>
                      <% } %>

                      <% if (editing && product.category=='egyeb')  { %> 
                        <option selected value="egyeb">Egyeb</option> 
        
                        <% } else{ %>
                        <option value="egyeb">Egyeb</option>
                      <% } %>
                     
                
                    </select>
                    <div class="input-group-append">
                      <label class="input-group-text" for="inputGroupSelect02">CATEGORY</label>
                    </div>
                  </div>
                 
            <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
            <% } %>
            <input type="hidden" name="_csurf" value="<%= csrfToken %>">
            <button class="btn btn-danger button-danger" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </div>
    </main>
<%- include('../includes/end.ejs') %>